<div class="container">
  <h1>Capital Hotel</h1>
  <div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

      <div class="item active">
        <%= image_tag("capital_reception.jpg", :alt => "Residential") %>
        <div class="carousel-caption">
          <h3>Reception</h3>
        </div>
      </div>

      <div class="item">
        <%= image_tag("capital_reception2.jpg", :alt => "Residential") %>
        <div class="carousel-caption">
          <h3>Reception</h3>
        </div>
      </div>

      <div class="item">
        <%= image_tag("capital_reception3.jpg", :alt => "Residential") %>
        <div class="carousel-caption">
          <h3>Reception</h3>
        </div>
      </div>

      <div class="item">
        <%= image_tag("capital_lobby.jpg", :alt => "Residential") %>
        <div class="carousel-caption">
          <h3>Lobby</h3>
        </div>
      </div>

      <div class="item">
        <%= image_tag("capital_lobby2.jpg", :alt => "Residential") %>
        <div class="carousel-caption">
          <h3>Lobby</h3>
        </div>
      </div>

      <div class="item">
        <%= image_tag("capital_lobby3.jpg", :alt => "Residential") %>
        <div class="carousel-caption">
          <!-- <h3>Reception</h3> -->
        </div>
      </div>

      <div class="item">
        <%= image_tag("capital_garden.jpg", :alt => "Residential") %>
        <div class="carousel-caption">
          <h3>Garden</h3>
        </div>
      </div>

      <div class="item">
        <%= image_tag("capital_vip_bar.jpg", :alt => "Residential") %>
        <div class="carousel-caption">
          <h3>VIP Bar</h3>
        </div>
      </div>

      <div class="item">
        <%= image_tag("capital_9thfloorlounge.jpg", :alt => "Residential") %>
        <div class="carousel-caption">
          <h3>Lounge</h3>
        </div>
      </div>

</div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
